import pickle
import os

def load_model_object(region, model_type, base_dir="../notebooks/models/aim_ca_has/ca_ach_data/model_training/ALL MODEL 0312/model_data"):
    """
    Loads a pickled model object based on region and model_type.

    Parameters:
    - region (str): Region name (e.g., "HAS")
    - model_type (str): Model type name (e.g., "ca_ach")
    - base_dir (str): Base directory for model storage

    Returns:
    - Loaded model object
    """
    model_path = os.path.join(
        base_dir,
        region,
        model_type,
        "fold_has_model",
        "trained_model.pkl"
    )

    if not os.path.exists(model_path):
        raise FileNotFoundError(f"Model file not found at: {model_path}")
    
    with open(model_path, "rb") as f:
        return pickle.load(f)
